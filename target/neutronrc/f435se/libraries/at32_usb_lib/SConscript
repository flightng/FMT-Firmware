import rtconfig
from building import *

# get current directory
cwd = GetCurrentDir()

# The set of source files associated with this SConscript file.
src = []
src += Glob('usb_bsp/*.c')
src += Glob('usb_drivers/src/*.c')
src += Glob('usbd_class/*.c')

path = [cwd + '/usb_bsp', 
    cwd + '/usb_drivers/inc',
    cwd + '/usbd_class']

group = DefineGroup('AT32_USB_Library', src, depend = [''], CPPPATH = path, CPPDEFINES=['USE_USB_FS'])

Return('group')
